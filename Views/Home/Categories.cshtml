@model cd_c_productsCategories.Models.Category

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Categories</title>
</head>
<body>
    <div class="container"> <!-- BEGIN WHOLE PAGE CONTAINER -->
        <div class="row"> <!-- BEGIN HEADER ROW -->
            <h4><a href="/products">Products</a> | Categories</h4>
        </div> <!-- END HEADER ROW -->

        <div class="row"> <!-- BEGIN MAIN BODY ROW -->
            <div class="col"> <!-- BEGIN CATEGORY FORM COLUMN -->
                <div class="container">
                    <h4>New Category</h4>
                    <form asp-action="addcategory" asp-controller="home" class="form-group">
                        <div class="card m-1 p-3">
                            <div>
                                <span asp-validation-for="CategoryName"></span>
                            </div>
                            <label asp-for="CategoryName"></label>
                            <input asp-for="CategoryName">

                            <input type="submit" value="Create" class="mt-3">
                        </div>
                    </form>
                </div>
            </div> <!-- END CATEGORY FORM COLUMN -->

            <div class="col"> <!-- BEGIN EXISTING CATEGORIES LIST -->
                <div class="container">
                    <h4>Existing Categories</h4>
                        <div class="card m-1 p-3">
                            @{
                                foreach(var p in ViewBag.AllCategories)
                                {
                                    <p>@p.CategoryName</p>
                                }
                            }

                        </div>
                </div>
            </div> <!-- END EXISTING CATEGORIES LIST -->
        </div> <!-- END MAIN BODY ROW -->


    </div> <!-- END WHOLE PAGE CONTAINER -->
</body>
</html>