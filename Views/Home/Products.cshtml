@model cd_c_productsCategories.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Products</title>
</head>
<body>
    <div class="container"> <!-- BEGIN WHOLE PAGE CONTAINER -->
        <div class="row"> <!-- BEGIN HEADER ROW -->
            <h4>Products | <a href="/categories">Categories</a></h4>
        </div> <!-- END HEADER ROW -->

        <div class="row"> <!-- BEGIN MAIN BODY ROW -->
            <div class="col"> <!-- BEGIN PRODUCT FORM COLUMN -->
                <div class="container">
                    <h4>New Product</h4>
                    <form asp-action="AddProduct" asp-controller="home" class="form-group">
                        <div class="card m-1 p-3">
                            <div>
                                <span asp-validation-for="ProductName"></span>
                            </div>
                            <label asp-for="ProductName"></label>
                            <input asp-for="ProductName">

                            <div>
                                <span asp-validation-for="Description"></span>
                            </div>
                            <label asp-for="Description"></label>
                            <input asp-for="Description">

                            <div>
                                <span asp-validation-for="Price"></span>
                            </div>
                            <label asp-for="Price"></label>
                            <input asp-for="Price">

                            <input type="submit" value="Create" class="mt-3">
                        </div>
                    </form>
                </div>
            </div> <!-- END PRODUCT FORM COLUMN -->

            <div class="col"> <!-- BEGIN EXISTING PRODUCTS LIST -->
                <div class="container">
                    <h4>Existing Products</h4>
                        <div class="card m-1 p-3">
                            @{
                                foreach(var p in ViewBag.AllProducts)
                                {
                                    <p><a href="/products/@p.ProductId">@p.ProductName</a></p>
                                }
                            }

                        </div>
                </div>
            </div> <!-- END EXISTING PRODUCTS LIST -->
        </div> <!-- END MAIN BODY ROW -->


    </div> <!-- END WHOLE PAGE CONTAINER -->
</body>
</html>