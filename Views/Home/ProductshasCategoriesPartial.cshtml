@model cd_c_productsCategories.Models.ProductsHasCategories

<form action="/addcategorytoproduct" method="post" class="form-group">
    <div class="card m-1 p-3">
        <div>
            <span asp-validation-for="CategoryId"></span>
        </div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            <option disabled selected hidden>--Please Select a Product--</option>
            @{
                foreach (var p in ViewBag.AllCategories)
                {
                    <option value="@p.CategoryId">@p.CategoryName</option>
                }
            }
        </select>

        <input asp-for="ProductId" value="@ViewBag.ThisProduct.ProductId" type="hidden">
            
    </div>

    <input class="mt-3" type="submit" value="Add">
</form>